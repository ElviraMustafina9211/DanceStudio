<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dancestudiokisti">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sectionsList.SectionsListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".list.StudentsListActivity"
            android:parentActivityName=".sectionsList.SectionsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sectionsList.SectionsListActivity" />
        </activity>

        <activity
            android:name=".details.StudentDetailsActivity"
            android:parentActivityName="list.StudentsListActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="list.StudentsListActivity" />
        </activity>


        <activity
            android:name=".newSection.NewSectionActivity"
            android:parentActivityName=".sectionsList.SectionsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".sectionsList.SectionsListActivity" />
        </activity>

        <activity
            android:name=".newStudent.NewStudentActivity"
            android:parentActivityName="list.StudentsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="list.StudentsListActivity" />
        </activity>


        <activity
            android:name=".imagePicker.ImageActivity"
            android:parentActivityName=".newStudent.NewStudentActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".newStudent.NewStudentActivity" />
        </activity>

    </application>

</manifest>